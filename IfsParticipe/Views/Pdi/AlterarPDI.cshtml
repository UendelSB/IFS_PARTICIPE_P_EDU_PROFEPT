@model PDI
@{
    ViewData["Title"] = "AlterarPDI";
    PDI pdi = Model;
}

<main role="main">

    <section class="container" style="margin-top: 50px">
        @if (TempData["MSG_E"] != null)
        {
            <p id="msgerro" class="alert alert-danger">@Html.Raw(TempData["MSG_E"])</p>
        }

        <div class="row" id="formulario">
            <aside class="col-sm-6">

                <div id="code_register_1">
                    <div class="card">
                        <header class="card-header">
                            <h4 class="card-title mt-2">Alterar PDI</h4>
                        </header>
                        <article class="card-body">


                            @using (Html.BeginForm(null, null, null, FormMethod.Post, false, new { @action = Url.Action("AlterarPDI", "Pdi") + "#formulario" }))
                            {

                                @Html.ValidationSummary()
                                <input type="hidden" asp-for="Id" />
                                <div class="form-row">

                                    <div class="col form-group">

                                        @Html.LabelFor(m => m.DataIniVig)
                                        @Html.EditorFor(m => m.DataIniVig, new { htmlAttributes = new { @class = "form-control" } })
                                    </div> <!-- form-group end.// -->
                                    <div class="col form-group">
                                        @Html.LabelFor(m => m.DataFimVig)
                                        @Html.EditorFor(m => m.DataFimVig, new { htmlAttributes = new { @class = "form-control" } })
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row end.// -->
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Situacao)
                                    @Html.DropDownListFor(m => m.Situacao, Model.SituacaoList, "Selecione", new { @class = "form-control" })
                                </div> <!-- form-group end.// -->
                                <div class="form-row">
                                    <div class="col form-group">
                                        @Html.LabelFor(m => m.DataIniRecDem)
                                        @Html.EditorFor(m => m.DataIniRecDem, new { htmlAttributes = new { @class = "form-control" } })
                                    </div> <!-- form-group end.// -->
                                    <div class="col form-group">
                                        @Html.LabelFor(m => m.DataFimRecDem)
                                        @Html.EditorFor(m => m.DataFimRecDem, new { htmlAttributes = new { @class = "form-control" } })
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row end.// -->

                                <div class="form-group">
                                    <button type="submit" class="btn btn-outline-success btn-block"> Alterar </button>
                                </div> <!-- form-group// -->

                            }
                        </article> <!-- card-body end .// -->
                        <div class="border-top card-body text-center"> <a href='@Url.Action("Index", "Pdi")'>Cancelar</a></div>
                    </div> <!-- card.// -->

                </div> <!-- code-wrap.// -->
            </aside>
        </div>
    </section>

    <hr class="featurette-divider">

</main>

