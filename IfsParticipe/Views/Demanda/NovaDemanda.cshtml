@model Demanda
@{
    ViewData["Title"] = "NovaDemanda";
}


<main role="main">

    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6">

                <div id="code_register_1">
                    <div class="card">
                        <header class="card-header">
                            <h4 class="card-title mt-2">Nova Demanda</h4>
                        </header>
                        <article class="card-body">

                            @if (TempData["MSG_E"] != null)
                            {
                                <p id="msgerro" class="alert alert-danger">@Html.Raw(TempData["MSG_E"])</p>
                            }

                            @using (Html.BeginForm(null, null, null, FormMethod.Post, false, new { @action = Url.Action("CadastrarDemanda", "Demanda") + "#formulario" }))
                            {

                                @Html.ValidationSummary()
                                <div class="form-row" id="formulario">
                                    <div class="col form-group">
                                        <label asp-for="Titulo">Título</label>
                                        <input type="text" asp-for="Titulo" class="form-control" placeholder="">
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row.// -->
                                <div class="form-group">
                                    <label asp-for="Categoria">Catagoria</label>
                                    @Html.DropDownListFor(m => m.Categoria, Model.CategoriaList, "Selecione", new { @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    <label asp-for="Descricao">Descrição</label>
                                    <textarea class="form-control" asp-for="Descricao" rows="3"></textarea>
                                </div>
                                <button type="submit" class="btn btn-outline-success btn-block">Enviar</button>
                            }


                            </article> <!-- card-body end .// -->
                        <div class="border-top card-body text-center"> <a href='@Url.Action("Index", "Demanda")'>Cancelar</a></div>
                    </div> <!-- card.// -->


                </div> <!-- code-wrap.// -->
            </aside>
        </div>
    </section>

    <hr class="featurette-divider">

</main>